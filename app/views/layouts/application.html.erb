<!DOCTYPE html>
<html lang="<%=I18n.locale%>">
  <head>
    <title><%= l.title %></title>
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-language" content="<%=I18n.locale%>">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="index, follow">
    
    <!-- Meta TAGS for social-->
    <meta property="og:locale" content="<%=I18n.locale%>"/>
    <meta property="og:type" content="article"/>
    <meta property="og:title" content="<%= l.meta.og.title %>"/>
    <meta property="og:description" content="<%= l.meta.og.description %>"/>
    <meta property="og:image" content='<%= "#{request.protocol}#{request.host_with_port}#{@logor.image1.url}" %>'/>
    <meta property="og:url" content="<%= request.original_url %>"/>
    <meta property="og:site_name" content="<%= l.meta.og.site_name %>"/>
    <!-- END Meta TAGS for social-->

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Preloader -->
    <div id="preloader">
      <div id="status">&nbsp;</div>
    </div>

    <%= yield %>

    <!-- init vide --><script type="text/javascript">(function($){"use strict";$('body').vide({mp4: "<%= asset_path('bg.mp4') %>", poster:  "<%= asset_path('bg-mobile-fallback.jpg') %>"},{posterType: 'jpg'});})(jQuery);</script><!-- END init vide -->

    <div class="language">
      <% if I18n.locale == I18n.default_locale %>
        <%= link_to "ENG", { :locale=>'en' } %> <span>|</span> РУС
        <%= @headr.description.html_safe %>
      <% else %>
        <%= link_to "РУС", { :locale=>'ru' } %> <span>|</span> ENG
        <%= @headr.slave.html_safe %>
      <%end%>
    </div>

    <style type="text/css">
      /*-- js animated send button only text--*/
      .sendok:after { content: "<%= l.btn.sendok %>" }
      .sender:after { content: "<%= l.btn.sender %>" }
      /*-- END js animated send button --*/
    </style>

    <!-- Preloader -->
    <script type="text/javascript">
      //<![CDATA[
      document.addEventListener("turbolinks:load", function() { // makes sure the whole site is loaded 
        $('#status').fadeOut(); // will first fade out the loading animation 
        $('#preloader').delay(350).fadeOut('slow'); // will fade out the white DIV that covers the website. 
        $('body').delay(350).css({'overflow':'visible'});
      })
      //]]>
    </script><!-- END Preloader -->
    <%= @coder.description.html_safe %>
  </body>
</html>
